<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodRecom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/font3"
                android:text="더 나은 추천을 위해 입력해주세요!"
                android:textColor="#000000"
                android:textSize="23dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="1. 좋아하는 음식 종류"
                android:fontFamily="@font/font3"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/chkCream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sweet"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>
            <CheckBox
                android:id="@+id/chkHot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hot"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>
            <CheckBox
                android:id="@+id/chkSlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/salt"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>
            <CheckBox
                android:id="@+id/chkLgt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/light"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>
            <CheckBox
                android:id="@+id/chkhlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/healhty"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="2. 좋아하는 고기"
                android:fontFamily="@font/font3"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/chkchk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chicken"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>
            <CheckBox
                android:id="@+id/chkbeef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beef"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>

            <CheckBox
                android:id="@+id/chkpork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pork"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>
            <CheckBox
                android:id="@+id/chklmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lamb"
                android:textStyle="bold"
                android:fontFamily="@font/font3"/>

            <Button
                android:id="@+id/su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="text"
                android:text="가입 완료"
                android:layout_gravity="center"
                android:background="@drawable/btn5"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>